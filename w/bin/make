#!/usr/bin/env tclkit

set root   "w"
set cmnd   [lindex $argv 0]
set item   [lindex $argv 1]

file mkdir /Melify/mtk/dev/tk/lib/components/$root
file mkdir /Melify/mtk/dev/tk/lib/components/$root/css
file mkdir /Melify/mtk/dev/tk/lib/components/$root/js

################################################################################
####
################################################################################
if {($argc == 0) || $argc > 3} {
    puts "COMMAND USAGE:"
    puts "\t make es5"
    puts "\t make mc  <component-name>"
    puts "\t make doc"
    puts "\t make all"

    puts "\nBAD COMMAND"
    exit
}

set cmnd   [lindex $argv 0]
set item   [lindex $argv 1]
set folder [lindex $argv 2]

puts "LOADING $cmnd NOW ..."
source ./_$cmnd
