    ../npm/node_modules/muuri/muuri.js
    ../npm/node_modules/dragula/dist/dragula.js
    ../npm/node_modules/sidr/dist/sidr.js
    ../npm/node_modules/slick-carousel/slick/slick.js

    ../npm/node_modules/datatables.net/js/jquery.dataTables.js
